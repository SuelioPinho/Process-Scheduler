<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageProcessador"
        android:scaleType="centerInside"
        android:background="@mipmap/ic_processador"/>

    <RelativeLayout
        android:id="@+id/relativeItemProcessador"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignBottom="@+id/imageProcessador"
        android:layout_marginBottom="22dp"
        android:layout_marginStart="22dp"
        android:layout_alignParentStart="true"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imagePcso"/>
    </RelativeLayout>



<!--
    android:background="@mipmap/ic_processo"
-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="13dp"
        android:text="Nome"
        android:textSize="12dp"
        android:layout_marginStart="12dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:id="@+id/nomeProcesso"
        android:layout_alignTop="@+id/relativeItemProcessador"
        android:layout_alignStart="@+id/relativeItemProcessador" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="13dp"
        android:text="T"
        android:layout_marginTop="5dp"
        android:textSize="12dp"
        android:layout_below="@+id/nomeProcesso"
        android:layout_alignStart="@+id/nomeProcesso"
        android:id="@+id/tempoProcesso"
        />



</RelativeLayout>