<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/relativeItemProcesso" android:layout_marginRight="5dp">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/imageProcesso"
        />
       <!-- android:background="@mipmap/ic_processo"-->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="13dp"
        android:text="Nome"
        android:textSize="12dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:id="@+id/nomeProcesso"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="13dp"
        android:text="TP "
        android:textSize="12dp"
        android:layout_below="@+id/nomeProcesso"
        android:layout_alignStart="@+id/deadLine"
        android:id="@+id/tempoProcesso"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="13dp"
        android:text="DL "
        android:textSize="12dp"
        android:layout_below="@+id/nomeProcesso"
        android:layout_alignStart="@+id/nomeProcesso"
        android:layout_marginTop="12dp"
        android:id="@+id/deadLine"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="13dp"
        android:text="M"
        android:textSize="12dp"
        android:layout_below="@+id/deadLine"
        android:layout_alignStart="@+id/nomeProcesso"
        android:id="@+id/memoria"
        />

</RelativeLayout>